%tr
  %td= budget.title
  %td= number_to_currency budget.monthly_amount
  %td= number_to_currency budget.yearly_amount
  %td= budget.schedule
  %td
    .btn-group
      = link_to edit_budget_path(budget), class: 'btn' do
        %span.icon-pencil.icon-white Edit
      = link_to "#", class: 'btn dropdown-toggle', :"data-toggle" => "dropdown" do
        %span.caret
      %ul.dropdown-menu
        %li
          = link_to transactions_path(category_id: budget.id) do
            %span.icon-money Expenses
        %li
          = link_to budget_path(budget), method: :delete, confirm: "Are you sure you want to delete this expense?" do
            %span.icon-trash Delete