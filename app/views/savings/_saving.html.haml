%tr
  %td= link_to(saving.title, saving)
  %td= number_to_currency saving.monthly_amount
  %td= number_to_currency saving.yearly_amount
  %td= saving.schedule
  %td
    .btn-group
      = link_to edit_saving_path(saving), class: 'btn' do
        %span.icon-pencil.icon-white Edit
      = link_to "#", class: 'btn dropdown-toggle', :"data-toggle" => "dropdown" do
        %span.caret
      %ul.dropdown-menu
        %li
          = link_to "#" do
            %span.icon-money Transactions
        %li
          = link_to saving_path(saving), method: :delete, confirm: "Are you sure you want to delete this saving?" do
            %span.icon-trash Delete