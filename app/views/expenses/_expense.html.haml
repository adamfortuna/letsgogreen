%tr 
  %td= expense.payee
  %td= expense.accountable ? link_to(expense.accountable, polymorphic_path(expense.accountable)) : ""
  %td= number_to_currency(expense.amount)
  %td= expense.date
  %td
    .btn-group
      = link_to edit_expense_path(expense), class: 'btn' do
        %span.icon-pencil.icon-white Edit
      = link_to "#", class: 'btn dropdown-toggle', :"data-toggle" => "dropdown" do
        %span.caret
      %ul.dropdown-menu
        %li
          = link_to expense_path(expense), method: :delete, confirm: "Are you sure you want to delete this expense?" do
            %span.icon-trash Delete