%tr
  %td= link_to bill.title, bill
  %td= bill.alias
  %td= number_to_currency bill.monthly_amount
  %td= number_to_currency bill.yearly_amount
  %td= bill.schedule
  %td

    .btn-group
      = link_to edit_bill_path(bill), class: 'btn' do
        %span.icon-pencil.icon-white Edit
      = link_to "#", class: 'btn dropdown-toggle', :"data-toggle" => "dropdown" do
        %span.caret
      %ul.dropdown-menu
        %li
          = link_to transactions_path(category_id: bill.id) do
            %span.icon-money Transactions
        %li
          = link_to bill_path(bill), method: :delete, confirm: "Are you sure you want to delete this bill?" do
            %span.icon-trash Delete
        %li
          = link_to new_transaction_path(transaction: { category_id: bill.id }) do
            %span.icon-money Pay Bill