#subheader
  .inner
    .container
      %h1 Sign In
      %small
        If you don't have an account you can 
        = link_to "sign up", new_registration_path(resource_name)


#subpage
  .container
    = render 'shared/flashes'
    .row
      .span6.offset3
        = simple_form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal well' } do |f|
          %fieldset
            = f.input :email
            = f.input :password, as: :password
            - if devise_mapping.rememberable?
              = f.input :remember_me, as: :boolean
            .form-actions
              = f.submit 'Sign In', class: 'btn btn-primary btn-large'
              %br
              = link_to "Recover your password", new_password_path(resource_name)