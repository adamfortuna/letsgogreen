#subheader
  .inner
    .container
      %h1 Update Your Account


#subpage
  .container
    = render 'shared/flashes'
    .row
      .span6.offset3
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal well', method: :put }) do |f|
          %fieldset
            %legend Edit #{resource_name.to_s.humanize}
            = f.input :email, hint: "This will also be your login"
            = f.input :password, hint: 'leave blank if you don\'t want to change it'
            = f.input :password_confirmation, label: "Confirm password"
            = f.input :current_password, hint: 'We need your current password to confirm your changes'

            .form-actions
              = f.submit 'Update', class: 'btn btn-primary'
