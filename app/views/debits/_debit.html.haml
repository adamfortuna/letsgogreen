%tr.debit
  %td= debit.title
  %td= debit.category ? link_to(debit.category, transactions_path(category: debit.category)) : ""
  %td.amount= number_to_currency(debit.amount * -1)
  %td= debit.date
  %td
    .btn-group
      = link_to edit_transaction_path(debit), class: 'btn' do
        %span.icon-pencil.icon-white Edit
      = link_to "#", class: 'btn dropdown-toggle', :"data-toggle" => "dropdown" do
        %span.caret
      %ul.dropdown-menu
        %li
          = link_to transaction_path(debit), method: :delete, confirm: "Are you sure you want to delete this?" do
            %span.icon-trash Delete