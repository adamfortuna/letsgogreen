#subheader
  .inner
    .container
      %h1 Income
#subpage
  .container
    .row
      .span9
        %table.table.incomes
          %thead
            %tr
              %th From
              %th Monthly Amount
              %th Yearly Amount
              %th Date
              %th Schedule
              %th Controls
          %tbody
            = render @incomes
          %tfoot
            %th Totals
            %th= number_to_currency @incomes.inject(0) { |total, income| total + income.monthly_amount }
            %th= number_to_currency @incomes.inject(0) { |total, income| total + income.yearly_amount }
            %th{ colspan: 3} &nbsp;

      .span3
        = render partial: 'incomes/sidebar'