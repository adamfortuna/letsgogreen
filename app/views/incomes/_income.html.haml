%tr
  %td= income.name
  %td= number_to_currency(income.monthly_amount)
  %td= number_to_currency(income.yearly_amount)
  %td= l income.date
  %td= income.schedule.blank? ? "Once" : income.schedule
  %td
    .btn-group
      = link_to "edit", edit_income_path(income), class: 'btn'
      = link_to "delete", income_path(income), method: :delete, confirm: "Are you sure you want to delete this income?", class: 'btn'